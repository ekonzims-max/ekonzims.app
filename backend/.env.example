PORT=5000
NODE_ENV=development
MONGODB_URI=mongodb://localhost:27017/ekonzims
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Session Secret
SESSION_SECRET=your_strong_random_session_secret_here

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key

# Email
# SMTP (example for Gmail with App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# EMAIL_* variables used by EmailService
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM="EkoNzims <your_email@gmail.com>"

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Development helper: when set to true new accounts are auto-verified (useful for local testing)
# Set to `false` in production.
AUTO_VERIFY_EMAIL=true
