# Variables d'environnement pour Railway (Backend)

# Port (Railway le définira automatiquement)
PORT=5000

# JWT Secret (changez cette valeur)
JWT_SECRET=votre_secret_jwt_super_securise_changez_moi

# Session Secret (changez cette valeur)
SESSION_SECRET=votre_secret_session_super_securise_changez_moi

# Frontend URL (Railway vous donnera l'URL après déploiement)
FRONTEND_URL=https://votre-app-web.up.railway.app

# Email Configuration (utilisez vos vraies valeurs)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=ekonzims@gmail.com
EMAIL_PASS=votre_mot_de_passe_app_gmail

# Base de données PostgreSQL (Railway générera automatiquement DATABASE_URL)
# DATABASE_URL sera ajouté automatiquement par Railway quand vous ajouterez PostgreSQL

# Firebase (optionnel - ou utilisez PostgreSQL de Railway)
# FIREBASE_PROJECT_ID=votre-projet-firebase
# FIREBASE_CREDENTIALS_PATH=./config/firebase-credentials.json
