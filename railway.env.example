# Configuration Railway - Variables d'environnement à configurer

# Node Environment
NODE_ENV=production

# Server Port (Railway définit automatiquement)
PORT=${{PORT}}

# Frontend URL (votre domaine Railway)
FRONTEND_URL=${{RAILWAY_PUBLIC_DOMAIN}}

# JWT Secret (générer une clé aléatoire forte)
JWT_SECRET=votre_secret_jwt_tres_long_et_aleatoire_ici

# Session Secret
SESSION_SECRET=votre_secret_session_tres_long_et_aleatoire_ici

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=ekonzims@gmail.com
EMAIL_PASS=votre_mot_de_passe_application_gmail

# Google OAuth (optionnel)
GOOGLE_CLIENT_ID=votre_google_client_id
GOOGLE_CLIENT_SECRET=votre_google_client_secret
GOOGLE_CALLBACK_URL=${{RAILWAY_PUBLIC_DOMAIN}}/api/auth/google/callback

# Facebook OAuth (optionnel)
FACEBOOK_APP_ID=votre_facebook_app_id
FACEBOOK_APP_SECRET=votre_facebook_app_secret
FACEBOOK_CALLBACK_URL=${{RAILWAY_PUBLIC_DOMAIN}}/api/auth/facebook/callback

# Email Scheduler (activer/désactiver les emails automatiques)
ENABLE_EMAIL_SCHEDULER=true

# Firebase Firestore (optionnel - pour base de données persistante)
# FIREBASE_CREDENTIALS_PATH=./config/firebase-credentials.json
# FIREBASE_PROJECT_ID=ekonzims-project
